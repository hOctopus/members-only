<%= form_for(:session, url: login_path) do |f| %>
  <ul>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </ul>
  <ul>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </ul>
  <ul>
    <%= f.label :password_confirmation, value: "Confirm password:" %>
    <%= f.password_field :password_confirmation %>
  </ul>
  <ul>
    <%= f.submit "Log in" %>
  </ul>
  <ul>Not a user yet? <%= link_to "Sign up!", new_user_path %>
<% end %>
