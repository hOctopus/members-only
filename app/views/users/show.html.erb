<% if logged_in? %>
  <ul><%= current_user.name %></ul>
  <ul><%= current_user.email %></ul>
  <ul><%= link_to "View posts", root_url %></ul>
  <ul><%= link_to "Create new post", new_post_path %></ul>
  <ul><%= link_to "Log out", logout_path, method: :delete %></ul>
  <ul>
    <%= link_to "Delete user", current_user, method: :delete, data:
                  { confirm: "Are you sure you want to delete this user?" } %>
  </ul>
<% else %>
  <ul><%= "You do not have permission to view this page. Please log in." %></ul>
  <ul><%= link_to "Log in", login_path %></ul>
<% end %>
