<% if logged_in? %>
  <ul><%= @posts.count %> post(s) by <%= current_user.name %></ul>
  <% @posts.each do |post| %>
    <ul><%= post.content %></ul>
    <ul><%= link_to "delete this post", post, method: :delete, data:
                    { confirm: "Are you sure you want to delete this post?"} %></ul>
    </br>
  <% end %>
  <ul><%= link_to "Create another post", new_post_path %></ul>
  <ul><%= link_to "Back to user page", current_user %></ul>
  <ul><%= link_to "Log out", logout_path, method: :delete %></ul>
<% else %>
  <ul><%= "You do not have permission to view this page. Please log in." %></ul>
  <ul><%= link_to "Log in", login_path %></ul>
<% end %>
